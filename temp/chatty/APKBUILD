pkgname=chatty
pkgver=0.3.0_git20210521
pkgrel=0
pkgdesc="A phone dialer and call handler"
arch="all !s390x !mips !mips64" # Blocked by libhandy and evolution
url="https://source.puri.sm/Librem5/chatty"
license="GPL-3.0-or-later"
depends="
	cyrus-sasl
	libpurple-xmpp
	purple-carbons
	purple-lurch
	purple-xmpp-http-upload
	"
makedepends="meson ninja gtk+3.0-dev pidgin-dev libhandy1-dev evolution-dev
	evolution-data-server-dev libgee-dev folks-dev feedbackd-dev libphonenumber-dev olm-dev modemmanager-dev"
checkdepends="appstream-glib desktop-file-utils"
_commit="62858ea9ec35db3aa7cd9de90077786622cf8ad1"
# source="https://source.puri.sm/Librem5/chatty/-/archive/v$pkgver/chatty-v$pkgver.tar.gz"
source="$pkgname-$pkgver.tar.gz::https://source.puri.sm/mohammed.sadiq/chatty/-/archive/$_commit/chatty-$_commit.tar.gz"
subpackages="$pkgname-lang $pkgname-bash-completion $pkgname-dbg"
options="!check" # Requires running Wayland compositor
builddir="$srcdir/$pkgname-$_commit"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}
