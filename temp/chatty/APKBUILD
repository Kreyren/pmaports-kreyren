pkgname=chatty
pkgver=0.4.0_git20211012
pkgrel=0
pkgdesc="A phone dialer and call handler"
arch="aarch64"
url="https://source.puri.sm/Librem5/chatty"
license="GPL-3.0-or-later"
depends="
	cyrus-sasl
	libpurple-xmpp
	purple-carbons
	purple-lurch
	purple-xmpp-http-upload
	"
makedepends="meson ninja gtk+3.0-dev pidgin-dev libhandy1-dev evolution-dev
	evolution-data-server-dev libgee-dev folks-dev feedbackd-dev libphonenumber-dev
	olm-dev modemmanager-dev gspell-dev"
checkdepends="appstream-glib desktop-file-utils"
_commit="8584ce6e6867e529c93dd0f3f281813aae2de634"
# source="https://source.puri.sm/Librem5/chatty/-/archive/v$pkgver/chatty-v$pkgver.tar.gz"
source="http://source.puri.sm/Librem5/chatty/-/archive/$_commit/chatty-$_commit.tar.gz"
subpackages="$pkgname-lang $pkgname-bash-completion $pkgname-dbg"
options="!check" # Requires running Wayland compositor
builddir="$srcdir/$pkgname-$_commit"

build() {
	wget --no-check-certificate -c http://gitlab.gnome.org/GNOME/libgd/-/archive/master/libgd-master.tar.gz -O - | tar -xz -C $builddir/subprojects/
	mv $builddir/subprojects/libgd-master/* $builddir/subprojects/libgd/
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}
