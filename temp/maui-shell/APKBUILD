pkgname=maui-shell
pkgver=2.1.2
_commit="92b3352454753503105d4361c28f5efdc6abea0d"
pkgrel=0
pkgdesc="Maui Shell is a convergent shell for desktops, tablets, and phones"
url="https://nxos.org/maui"
arch="all"
license="LGPL-3.0"
# Probably don't need all of "plasma"
depends="mauikit plasma plasma-pa plasma-nm bluedevil"
# plasma-workspace-dev is temporary, need to figure out what of it we actually need...
makedepends="
    kconfig-dev
    kcoreaddons-dev
    kunitconversion-dev
    kitemmodels-dev
    plasma-workspace-dev
    kded
    ki18n-dev
    kio-dev
    kidletime-dev
    knotifications-dev
    qt5-qtsvg-dev
    qt5-qtwayland-dev
    qt5-qtbase-dev
    qt5-qtdeclarative-dev
    qt5-qtquickcontrols2-dev
    mauikit-dev
    mauikit-filebrowsing-dev
    cmake
    extra-cmake-modules
"
install=""
subpackages=""
source="${pkgname}-$_commit.tar.gz::https://github.com/Nitrux/maui-shell/archive/$_commit.tar.gz
"
builddir="$srcdir/${pkgname}-$_commit"

build() {
    cmake -B build \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DCMAKE_PREFIX_PATH="/usr/lib/cmake/MauiKit;/usr/lib/cmake/MauiKitFileBrowsing" .
    make -C build
}

package() {
    DESTDIR="$pkgdir" make -C build install
}

