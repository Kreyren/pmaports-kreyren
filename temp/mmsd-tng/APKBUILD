# Contributor: Julian P Samaroo <jpsamaroo@jpsamaroo.me>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=mmsd-tng
pkgver=1.0_beta4
_pkgver=${pkgver%%_*}.${pkgver##*_}
pkgrel=0
pkgdesc="Daemon for receiving and managing GSM MMS messages"
url="https://gitlab.com/kop316/mmsd"
arch="all !mips !mips64 !s390x" # blocked by modemmanager
license="GPL-2.0-only"
# upstream was renamed mmsd-->mmsd-tng
provides="mmsd"
replaces="mmsd"
makedepends="
	c-ares-dev
	dbus-dev
	evolution-data-server-dev
	glib-dev
	libsoup-dev
	meson
	modemmanager-dev
	"
source="
	$pkgname-$pkgver.tar.gz::https://gitlab.com/kop316/mmsd/-/archive/${_pkgver}/mmsd-${_pkgver}.tar.gz
	mmsd.desktop
	"
builddir="$srcdir/${pkgname%%-tng}-$_pkgver"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test -C output
}

package() {
	DESTDIR="$pkgdir" meson install -C output
	install -Dm644 "$srcdir"/mmsd.desktop \
		"$pkgdir"/etc/xdg/autostart/mmsd.desktop
}

sha512sums="
