# Maintainer: Stacy Harper <contact@stacyharper.net>
pkgname=sxmo-wlroots
pkgver=9999
_pkgver=0.14.0.0
pkgrel=0
pkgdesc="Modular Wayland compositor library - Sxmo version"
url="https://gitlab.freedesktop.org/wlroots/wlroots"
license="MIT"
provides="wlroots"
arch="all !ppc64le !mips64" # blocked by libseat
makedepends="
	eudev-dev
	libcap-dev
	libinput-dev
	libseat-dev
	libxcb-dev
	libxkbcommon-dev
	mesa-dev
	meson
	ninja
	pixman-dev
	wayland-dev
	wayland-protocols
	xcb-util-image-dev
	xcb-util-renderutil-dev
	xcb-util-wm-dev
	xkeyboard-config
	xwayland-dev
	"
subpackages="$pkgname-dbg $pkgname-dev"
source="$pkgname-$_pkgver.tar.gz::https://git.sr.ht/~stacyharper/wlroots/archive/$_pkgver.tar.gz"
builddir="$srcdir"/wlroots-$_pkgver
options="!check" # no test suite

build() {
	abuild-meson \
		-Dexamples=false \
		. build
	meson compile ${JOBS:+-j ${JOBS}} -C build
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C build
}

sha512sums="
89bbd295076908533f69a6bc85972ed6f68642c3598bdb1b661bf4ddc792ef14d84b0bc650737b5c326006e7142bb53fc4760be3da7e4d1a6fa975fffd6cdfce  sxmo-wlroots-0.14.0.0.tar.gz
"
