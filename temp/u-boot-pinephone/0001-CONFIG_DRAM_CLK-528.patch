index d8ee930a..702e2bdc 100644
--- a/configs/pinephone_defconfig
+++ b/configs/pinephone_defconfig
@@ -4,7 +4,7 @@ CONFIG_SPL=y
 CONFIG_PINEPHONE_LEDS=y
 CONFIG_MACH_SUN50I=y
 CONFIG_SUNXI_DRAM_LPDDR3_STOCK=y
