# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkipi
pkgver=24.01.90
pkgrel=0
pkgdesc="KDE Image Plugin Interface library"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.digikam.org/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
depends_dev="
	kconfig5-dev
	kservice5-dev
	kxmlgui5-dev
	qt5-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	libjpeg-turbo-dev
	libkexiv2-dev
	samurai
	tiff-dev
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/graphics/libkipi.git"
source="https://download.kde.org/unstable/release-service/$pkgver/src/libkipi-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
18c89a250f1092d41e841b8e11276f2d555898de4d35a95c9ae399080439710a418bbc296b9c5905dfca6758e17fdfad4a694720915aa75d6a4a4e226c91600e  libkipi-24.01.90.tar.xz
"
