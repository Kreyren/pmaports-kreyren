# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkipi
pkgver=24.01.95
pkgrel=0
pkgdesc="KDE Image Plugin Interface library"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.digikam.org/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
depends_dev="
	kconfig5-dev
	kservice5-dev
	kxmlgui5-dev
	qt5-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	libjpeg-turbo-dev
	libkexiv2-dev
	samurai
	tiff-dev
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/graphics/libkipi.git"
source="https://download.kde.org/unstable/release-service/$pkgver/src/libkipi-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
d456c589f31948f44a5a77d9837d13dc7b84ef3aaf2902b1cb36f00939ab68296176215cc04a312f36fd343805b6feccbfdd8bdd5949d9a5357b4167b94d738b  libkipi-24.01.95.tar.xz
"
