# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=plasmatube
pkgver=9999_git20230920
pkgrel=0
_commit="f8bfd104ca6f623e79b5c0ae0ff201e5659cfe8b"
pkgdesc="Kirigami YouTube video player based on Invidious"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	kirigami2

	yt-dlp
	"
makedepends="
	kirigami-addons-dev
	extra-cmake-modules
	ki18n-dev
	kirigami2-dev
	mpv-dev
	qt6-qtbase-dev

	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/multimedia/plasmatube.git"
source="http://localhost:8000/plasmatube-$_commit.tar.xz"
options="!check" # No tests

options="!check"
builddir="$srcdir/plasmatube-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8be236031bc95d750c1455819a156bf5a062ba57fdc3911be91cd836794c8cb4346a1c977daf363222b48f9814b5bece19a0c21a4aaa87fea3232ccebfedfec5  plasmatube-f8bfd104ca6f623e79b5c0ae0ff201e5659cfe8b.tar.xz
"
