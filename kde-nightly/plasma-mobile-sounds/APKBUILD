# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=plasma-mobile-sounds
pkgver=9999_git20230807
pkgrel=0
_commit="755a3c8ca8d4b84645e4c83040edd7b39436ece6"
pkgdesc="Sounds for Plasma Mobile devices"
url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds"
# armhf blocked by extra-cmake-modules
arch="noarch !armhf"
license="CC-BY-4.0 AND CC-BY-SA-4.0 AND CC0-1.0"
makedepends="
	qt6-qttools-dev
	extra-cmake-modules
	samurai
	"
_repo_url="https://invent.kde.org/plasma-mobile/plasma-mobile-sounds.git"
source="http://localhost:8000/plasma-mobile-sounds-$_commit.tar.xz"
options="!check" # No code to test

options="!check"
builddir="$srcdir/plasma-mobile-sounds-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
