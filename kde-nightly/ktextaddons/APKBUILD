# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=ktextaddons
pkgver=9999_git20230924
pkgrel=0
_commit="85aa0a437ece2ec704605f345193c0566ca941d2"
pkgdesc="Various text handling addons"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/libraries/ktextaddons/"
license="LGPL-2.0-or-later AND GPL-2.0-or-later"
depends_dev="
	kio-dev
	syntax-highlighting-dev
	karchive-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kxmlgui-dev
	qt6-qtbase-dev
	qtkeychain-dev
	"
makedepends="
	$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
checkdepends="xvfb-run"
_repo_url="https://invent.kde.org/libraries/ktextaddons.git"
source="http://localhost:8000/ktextaddons-$_commit.tar.xz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/ktextaddons-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_DESIGNERPLUGIN=ON \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	local skipped_tests="("
	local tests="
		languagetoolconfigwidget
		translator-translatorwidget
		translator-translatorengineloader
		grammaleceresultwidget
		grammaleceresultjob
		grammalececonfigwidget
	"
	for test in $tests; do
		skipped_tests="$skipped_tests|$test"
	done
	skipped_tests="$skipped_tests)test"
	xvfb-run ctest --test-dir build --output-on-failure -E "$skipped_tests"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
8ea1974f412e37245d073236b88a8b84c1719b58bcb0ace7b64a54958e12200b39a920891a1f7266b8cf876ee4321c74d308d292822f63ed4930c6bb54259e29  ktextaddons-85aa0a437ece2ec704605f345193c0566ca941d2.tar.xz
"
