# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=phonon-backend-vlc
pkgver=9999_git20230917
pkgrel=0
_commit="434135246d455e132bcc6cf784d1b9b837459e50"
pkgdesc="Phonon VLC backend"
url="https://userbase.kde.org/Phonon"
# armhf blocked by extra-cmake-modules
# s390x blocked by vlc
arch="all !armhf !s390x"
license="LGPL-2.1-or-later"
makedepends="
	extra-cmake-modules
	phonon-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	vlc-dev
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/libraries/phonon-vlc.git"
source="http://localhost:8000/phonon-vlc-$_commit.tar.xz"
options="!check" # No tests available

options="!check"
builddir="$srcdir/phonon-vlc-$_commit"

build() {
	cmake -B build -DPHONON_BUILD_QT5=OFF -DPHONON_BUILD_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
65445b3053438cdb2ce93c40f6e3876f9d3132bbbd0a5695ccd55563cae199c8b24dd66b086c6dfd6c7379d0b23d33630e9906b247804a90f4d2bf1675c28cdf  phonon-vlc-434135246d455e132bcc6cf784d1b9b837459e50.tar.xz
"
