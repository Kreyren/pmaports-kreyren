# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=kmousetool
pkgver=9999_git20230921
pkgrel=0
_commit="dc6af9387fdcd04a974ee6c046841cae28956894"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://kde.org/applications/utilities/org.kde.kmousetool"
pkgdesc="A program that clicks the mouse for you"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	kstatusnotifieritem-dev
	extra-cmake-modules
	qt6-qtbase-dev
	kdbusaddons-dev
	kdoctools-dev
	ki18n-dev
	kiconthemes-dev
	knotifications-dev
	kxmlgui-dev
	phonon-dev
	libxt-dev
	libxtst-dev
	samurai
	"
_repo_url="https://invent.kde.org/accessibility/kmousetool.git"
source="http://localhost:8000/kmousetool-$_commit.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

options="!check"
builddir="$srcdir/kmousetool-$_commit"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
f775ba986c5c855654e14a160f29ce10c5078d360704434570d3f4d47493943eed2d9f5e547d3523c11385d6beade49435bc94d03e24ba9550211f1e35adf277  kmousetool-dc6af9387fdcd04a974ee6c046841cae28956894.tar.xz
"
