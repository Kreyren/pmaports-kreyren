# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
pkgname=polkit-qt-1
pkgver=9999_git20220918
pkgrel=0
_commit="590e7108acf4e2ccb3d2d95e6c436054e310e756"
pkgdesc="Qt wrapper around polkit-1 client libraries"
arch="all"
url="https://www.kde.org"
license="LGPL-2.1-only"
depends_dev="polkit-elogind-dev"
makedepends="$depends_dev
	cmake
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/libraries/polkit-qt-1.git"
source="http://localhost:8000/polkit-qt-1-$_commit.tar.xz"
subpackages="$pkgname-dev"

options="!check"
builddir="$srcdir/polkit-qt-1-$_commit"

build() {
	cmake -B build -DQT_MAJOR_VERSION=6 -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
7f7bfb8a635aac933b6da7f6256304cb04a6241ec563a5b04f5fbabbc38e8c31242c34293247d06017c480a8e6a1c469f8b5c158cbb6585a29a8b96f54ab99ef  polkit-qt-1-590e7108acf4e2ccb3d2d95e6c436054e310e756.tar.xz
"
