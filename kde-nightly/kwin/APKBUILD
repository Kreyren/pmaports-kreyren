	kiconthemes-dev
	kidletime-dev

	kio-dev
	knewstuff-dev
	knotifications-dev
	kpackage-dev
	krunner-dev
	kscreenlocker-dev
	kservice-dev
	ktextwidgets-dev
	kwayland-dev
	kwidgetsaddons-dev
