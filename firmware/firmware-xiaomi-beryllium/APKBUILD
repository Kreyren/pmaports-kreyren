pkgname=firmware-xiaomi-beryllium
pkgver=1
pkgrel=2
pkgdesc="Firmware for Xiaomi Poco F1"
url="https://github.com/Venji10/firmware-xiaomi-beryllium"
subpackages=""
arch="aarch64"
license="proprietary"
options="!check !strip !archcheck"

_commit="c91d13e6ee4c91b5665911816607ddc7bb60f0a4"
source="$pkgname-$_commit.tar.gz::$url/archive/$_commit.tar.gz"

_fwdir="/lib/firmware/qcom"

package() {
	pkgdesc="Xiaomi Poco F1 firmware"
	mkdir -p "$pkgdir"
	cd "$srcdir/firmware-xiaomi-beryllium-$_commit"
	install -Dm644 ./* -t "$_fwdir/"
	install -Dm644 ./*/* -t "$_fwdir/*"
}

sha512sums=""
