# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=libqtdbusmock
pkgver=0_git20230215
_commit="e875ddd9b79d87bffe6b10047e592b304bd62a47"
pkgrel=0
pkgdesc="Library for mocking DBus interactions using Qt"
url='https://gitlab.com/ubports/development/core/libqtdbusmock'
arch="all"
license="LGPL-3.0-only"
makedepends="
	cmake
	cmake-extras
	gmock
	gtest-dev
	libqtdbustest
	networkmanager-dev
	qt5-qtbase-dev
	"
checkdepends="py3-dbusmock procps"
source="https://gitlab.com/ubports/development/core/libqtdbusmock/-/archive/$_commit/libqtdbusmock-$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests fail under QEMU

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}
sha512sums="
