pkgname=lomiri-settings-components
pkgver=1.0.0_git20230412
pkgrel=0
_commit="5041243d56fb7aaab270b4d07284687ec33f75c6"
pkgdesc="Ubuntu settings components for Lomiri"
arch="all"
url="https://gitlab.com/ubports/development/core/lomiri-settings-components"
license="GPL-3.0-only AND LGPL-3.0-only"
makedepends="cmake cmake-extras qt5-qtdeclarative-dev"
source="
	https://gitlab.com/ubports/development/core/lomiri-settings-components/-/archive/$_commit/lomiri-settings-components-$_commit.tar.gz
	qmltestrunner.patch
	"
subpackages="$pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

