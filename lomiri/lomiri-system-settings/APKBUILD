pkgdesc="System Settings application for Unity8"
url="https://gitlab.com/ubports/development/core/lomiri-system-settings"
arch="all !armhf"
license="GPL-3.0-only"
depends="
	accountsservice-ubuntu
	ayatana-indicator-bluetooth
	ayatana-indicator-datetime
	ayatana-indicator-power
	lomiri-content-hub
	lomiri-indicator-network
	lomiri-settings-components
	lomiri-ui-toolkit
	qt5-qtmultimedia
	"
makedepends="cmake cmake-extras qt5-qtbase-dev upower-dev networkmanager-dev accountsservice-ubuntu-dev geonames-dev icu-dev libqtdbusmock gsettings-qt-dev click-dev gnome-desktop-dev lomiri-trust-store-dev qt5-qtdeclarative-dev qt5-qtdeclarative intltool"
checkdepends="xvfb-run py3-xdg py3-dbusmock"
subpackages="$pkgname-lang"
source="https://gitlab.com/ubports/development/core/lomiri-system-settings/-/archive/$_commit/lomiri-system-settings-$_commit.tar.gz
	0003-Use-qmltestrunner-qt5.patch
	migrate-to-upstream-maliit-keyboard.patch
	"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # 67% tests passed, 5 tests failed out of 15

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

