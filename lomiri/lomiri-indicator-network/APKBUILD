pkgname=lomiri-indicator-network
pkgver=0_git20230605
_commit="ac0ae8ec8968c934f81c2664879ab10f76ab0fc2"
pkgrel=0
pkgdesc="The 'Network' indicator for Ubuntu Touch"
arch="all"
url="https://gitlab.com/ubports/development/core/lomiri-indicator-network"
license="GPL-3.0"
depends_dev="glib-dev lomiri-api-dev ofono-dev networkmanager-dev libsecret-dev lomiri-url-dispatcher-dev qt5-qtdeclarative-dev libqofono-dev"
makedepends="$depends_dev cmake-extras gtest-dev gmock libqtdbustest libqtdbusmock gmenuharness-dev intltool qt5-qttools"
checkdepends="py3-dbusmock"
source="https://gitlab.com/ubports/development/core/lomiri-indicator-network/-/archive/$_commit/lomiri-indicator-network-$_commit.tar.gz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests are broken in general at the moment

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

