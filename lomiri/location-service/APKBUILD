# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=location-service
pkgver=0_git20231003
pkgrel=0
_commit="9bf1c80486f61e50554320eb86a5a1580adcba77"
pkgdesc="Location service aggregating position/velocity/heading updates and exporting them over dbus"
arch="all"
url="https://gitlab.com/ubports/development/core/location-service"
license="GPL-3.0 LGPL-3.0"
depends_dev="
	boost-dev
	dbus-dev
	gflags-dev
	glog-dev
	json-c-dev
	libapparmor-dev
	net-cpp-dev
	process-cpp-dev
	properties-cpp-dev
	qt5-qtbase-dev
	qt5-qtlocation-dev
	trust-store-dev
	"
makedepends="$depends_dev
	cmake-extras
	dbus-cpp-dev
	gettext
	gmock
	gtest-dev
	"
checkdepends="coreutils"
source="
	https://gitlab.com/ubports/development/core/location-service/-/archive/$_commit/location-service-$_commit.tar.gz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Several failures

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DLOCATION_SERVICE_ENABLE_GPS_PROVIDER=OFF
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
b20e7a9d6c6492187a5a85de92c0e2627c0f7553f8476458ab1075e8253c9c078687fcfbae078dbd8f839731a2e9fd6d6e77b4cab227c94d9fbe969386bcc950  location-service-9bf1c80486f61e50554320eb86a5a1580adcba77.tar.gz
"
