# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=location-service
pkgver=0_git20230114
pkgrel=0
_commit="e67c05f98b8983fc633ce3b1eb1ab67d8ac4a185"
pkgdesc="Location service aggregating position/velocity/heading updates and exporting them over dbus"
arch="all"
url="https://gitlab.com/ubports/development/core/location-service"
license="GPL-3.0 LGPL-3.0"
depends_dev="
	boost-dev
	dbus-dev
	gflags-dev
	glog-dev
	json-c-dev
	libapparmor-dev
	net-cpp-dev
	process-cpp-dev
	properties-cpp-dev
	qt5-qtbase-dev
	qt5-qtlocation-dev
	trust-store-dev
	"
makedepends="$depends_dev
	cmake-extras
	dbus-cpp-dev
	gettext
	gmock
	gtest-dev
	"
checkdepends="coreutils"
source="
	https://gitlab.com/ubports/development/core/location-service/-/archive/$_commit/location-service-$_commit.tar.gz
	0001-Upgrade-C-standard-to-C-17.patch
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Several failures

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DLOCATION_SERVICE_ENABLE_GPS_PROVIDER=OFF
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

