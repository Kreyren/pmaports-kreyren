# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=libqtdbustest
pkgver=0_git20230208
_commit="f204bb8d7e9a2ffcd159d2f51f47257a715bbd62"
pkgrel=0
pkgdesc='Library for testing DBus interactions using Qt'
url='https://gitlab.com/ubports/development/core/libqtdbustest'
arch="all"
license="LGPL-3.0-only"
makedepends="
	cmake
	cmake-extras
	gmock
	gtest-dev
	qt5-qtbase-dev
	"
checkdepends="procps py3-dbusmock dbus-x11"
source="https://gitlab.com/ubports/development/core/libqtdbustest/-/archive/$_commit/libqtdbustest-$_commit.tar.gz
	googletest-1.13.0.patch"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Checks fail when being cross-compiled with QEMU

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_LIBEXECDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="
