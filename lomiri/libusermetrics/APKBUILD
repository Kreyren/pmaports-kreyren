# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=libusermetrics
pkgver=0_git20230302
_commit="bce6f62b8472bf35bb746b9fcb92aecfe3295c36"
pkgrel=0
pkgdesc='Library for exporting anonymous metrics about users'
arch="all"
url="https://gitlab.com/ubports/development/core/libusermetrics"
license="GPL-3.0 LGPL-3.0 LGPL-2.1"
depends_dev="
	click-dev
	gsettings-qt-dev
	libapparmor-dev
	qdjango-dev
	qt5-qtdeclarative-dev
	qt5-qtxmlpatterns-dev
	"
makedepends="
	$depends_dev
	cmake-extras
	gmock
	gtest-dev
	intltool
	libapparmor
	libqtdbustest
	qt5-qtbase-dev
	"
checkdepends="dbus"
source="https://gitlab.com/ubports/development/core/libusermetrics/-/archive/$_commit/libusermetrics-$_commit.tar.gz"
subpackages="$pkgname-dev $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests fail under QEMU

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="
4fab5b4e5c5c4e56dcd528c61b3be1a7c04d4e221b5cb41c8d95e2b8db4e74e8b7ecb6bcbbeaa3a078d8f8843df45ee15256221ef7ab7c3df72697934aaf47d4  libusermetrics-bce6f62b8472bf35bb746b9fcb92aecfe3295c36.tar.gz
"
