# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=libusermetrics
pkgver=0_git20230205
_commit="5b447421cc0521e9e35c0dae9d2bfd85a57603e7"
pkgrel=0
pkgdesc='Library for exporting anonymous metrics about users'
arch="all"
url="https://gitlab.com/ubports/development/core/libusermetrics"
license="GPL-3.0 LGPL-3.0 LGPL-2.1"
depends_dev="
	click-dev
	gsettings-qt-dev
	libapparmor-dev
	qdjango-dev
	qt5-qtdeclarative-dev
	qt5-qtxmlpatterns-dev
	"
makedepends="
	$depends_dev
	cmake-extras
	gmock
	gtest-dev
	intltool
	libapparmor
	libqtdbustest
	qt5-qtbase-dev
	"
checkdepends="dbus"
source="https://gitlab.com/ubports/development/core/libusermetrics/-/archive/$_commit/libusermetrics-$_commit.tar.gz
	googletest-1.13.0.patch"
subpackages="$pkgname-dev $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests fail under QEMU

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

sha512sums="
