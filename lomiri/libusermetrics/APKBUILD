# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=libusermetrics
pkgver=0_git20230907
_commit="d10fdf1e46810f4cdd48611ad2413d6c4704000d"
pkgrel=0
pkgdesc='Library for exporting anonymous metrics about users'
arch="all"
url="https://gitlab.com/ubports/development/core/libusermetrics"
license="GPL-3.0 LGPL-3.0 LGPL-2.1"
depends_dev="
	click-dev
	gsettings-qt-dev
	libapparmor-dev
	qdjango-dev
	qt5-qtbase-dev
	qt5-qtxmlpatterns-dev
	"
makedepends="$depends_dev
	cmake-extras
	doxygen
	gmock
	gtest-dev
	intltool
	libapparmor
	libqtdbustest
	"
checkdepends="dbus"
source="https://gitlab.com/ubports/development/core/libusermetrics/-/archive/$_commit/libusermetrics-$_commit.tar.gz"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
builddir="$srcdir/$pkgname-$_commit"
options="!check" # Tests fail under QEMU

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2dffef57c3a64ada824eadbc4d178a8feac7247ec72e3cebf9fd828a46feae4aaa1138be11c3305a519ef2847727dc683bccdb2f1636707ac62939469a7fcebf  libusermetrics-d10fdf1e46810f4cdd48611ad2413d6c4704000d.tar.gz
"
