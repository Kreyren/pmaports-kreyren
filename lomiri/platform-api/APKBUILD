# Maintainer: Luca Weiss <luca@z3ntu.xyz>
pkgname=platform-api
pkgver=0_git20230105
pkgrel=0
_commit="f56feee4b8bcbde4437c6763768c63fc2ff7911f"
pkgdesc="Platform API for system level capabilities"
arch="all"
url="https://gitlab.com/ubports/development/core/platform-api"
license="GPL-3.0-only AND LGPL-3.0-only"
depends_dev="
	location-service-dev
	lomiri-url-dispatcher-dev
	process-cpp-dev
	"
makedepends="
	$depends_dev
	cmake
	cmake-extras
	dbus-cpp-dev
	gmock
	gtest-dev
	"
source="https://gitlab.com/ubports/development/core/platform-api/-/archive/$_commit/platform-api-$_commit.tar.gz
	url-dispatcher-rename.patch
	"
subpackages="$pkgname-dev"
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make -C build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	make -C build DESTDIR="$pkgdir" install
}

