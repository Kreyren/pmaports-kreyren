pkgname=mkbootimgpxa-osm0sis
pkgver=2019.04.13
pkgrel=0
pkgdesc="Android bootimg tools (maintained fork of the C version, see #441)"
url="https://github.com/osm0sis/pxa-mkbootimg"
arch="all"
license="APACHE2"
depends=""
provides="mkbootimgpxa=$pkgver unpackbootimgpxa=$pkgver"
replaces="mkbootimgpxa"
subpackages=""
source="
	$pkgname-$pkgver.tar.gz::https://github.com/osm0sis/pxa-mkbootimg/archive/$pkgver.tar.gz
	patch.patch
	"

options="!check"
builddir="$srcdir/pxa-mkbootimg-$pkgver"

build() {
	cd "$builddir"
	make -j1
}

package() {
	install -Dm755 "$builddir/pxa-mkbootimg" "${pkgdir}/usr/bin/mkbootimgpxa-osm0sis"
	install -Dm755 "$builddir/pxa-unpackbootimg" "${pkgdir}/usr/bin/unpackbootimgpxa"
	install -Dm755 "$builddir/pxa1088-dtbTool" "${pkgdir}/usr/bin/pxa1088-dtbTool"
	install -Dm755 "$builddir/pxa1908-dtbTool" "${pkgdir}/usr/bin/pxa1908-dtbTool"
	}



