pkgname=postmarketos-ui-mate
pkgver=1
pkgrel=5
pkgdesc="(X11) MATE Desktop Environment, fork of GNOME2 (stylus recommended)"
url="http://mate-desktop.org/"
arch="noarch"
license="GPL3+"
depends="mate-desktop-environment xorg-server dbus-x11 mesa-egl postmarketos-artwork-wallpapers gtk+2.0 nodm"
makedepends=""
install="$pkgname.post-install $pkgname.pre-deinstall"
subpackages=""
source="000-system-background.gschema.override"
options="!check"

package() {
	mkdir -p "$pkgdir"/etc/X11
	ln -s /usr/bin/mate-session "$pkgdir"/etc/X11/Xsession
	
	install -Dm644 "$srcdir"/000-system-background.gschema.override \
		"$pkgdir"/usr/share/glib-2.0/schemas/000-system-background.gschema.override
}

