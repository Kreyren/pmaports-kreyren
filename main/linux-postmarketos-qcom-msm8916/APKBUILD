fd182bdaa2d3db77fb722338c990214d0edb35e41b96d57080ede1eb49dd2c8eecfcc1eb165b612e2f08e4ecf0cdc6516ab2b14180163d57001aaf59352ae4fa  config-postmarketos-qcom-msm8916.aarch64
99f4bdfd332c73834b4e5a43bc6f84346db392dfb38f4088822efc3ee8e206630e00617648349f65b7b69b688dc4a3be5386eb2d69cd198eae7d738709c39c7c  config-postmarketos-qcom-msm8916.armv7
