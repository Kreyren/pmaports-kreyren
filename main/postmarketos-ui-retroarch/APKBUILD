pkgname=postmarketos-ui-retroarch
pkgver=1
pkgrel=0
pkgdesc="TODO"
url="https://retroarch.com"
arch="all"
license="GPL-3.0-or-later"
depends="
	bluez
	cage
	retroarch
	retroarch-assets
	retroarch-joypad-autoconfig
	postmarketos-base-ui
	postmarketos-base-ui-networkmanager
	pulseaudio
	tinydm
	tinydm-openrc
	upower
	"
install="$pkgname.post-install $pkgname.post-upgrade"
options="!check pmb:gpu-accel"
source="
	retroarch.desktop
"

_pmb_recommends="
	libretro-beetle-bsnes
"

package() {
	install -Dm644 "$srcdir"/retroarch.desktop \
		-t "$pkgdir"/usr/share/wayland-sessions/

}
