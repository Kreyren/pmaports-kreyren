pkgver=1.6.0
pkgrel=3
pkgdesc="Simple Mobile: Mobile environment based on SXMO"
url="http://sr.ht/~mil/Sxmo"
arch="noarch !armhf"
license="MIT"
depends="
	alsa-utils
	codemadness-frontends
	dnsmasq
	dunst
	ffmpeg
	font-fira-mono-nerd
	font-terminus-nerd
	geoclue
	inotify-tools
	light
	lisgd
	mediainfo
	mmsd-tng
	mmsd-tng-tools
	mnc
	modemmanager
	modemmanager-openrc
	mpv
	ncurses
	networkmanager
	networkmanager-openrc
	pn
	polkit
	polkit-openrc
	postmarketos-base-ui
	sxmo-utils
	sxmo-utils-openrc
	terminus-font
	tinydm
	tinydm-openrc
	tzdata
	v4l-utils
	vis
	youtube-dl

	autocutsel
	conky
	svkbd
	sxiv
	sxmo-dmenu
	sxmo-dwm
	sxmo-st
	unclutter-xfixes
	xcalib
	xclip
	xdotool
	xdpyinfo
	xinput
	xprintidle
	xprop
	xrandr
