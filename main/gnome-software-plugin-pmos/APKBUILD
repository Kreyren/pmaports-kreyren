pkgname=gnome-software-plugin-pmos
pkgver=0.1
pkgrel=0
pkgdesc="gnome-software plugin for upgrading pmos"
url="https://postmarketos.org/"
arch="all"
license="GPL-3.0"
depends="gnome-software dbus postmarketos-upgrader-dbus"
makedepends="gnome-software-dev build-base meson ninja"
_commit=38b3a7266da385148cb7bb269cda00ce832a5da8
source="https://gitlab.com/andrisas/gnome-software-plugin-pmos/-/archive/$_commit/gnome-software-plugin-pmos-$_commit.tar.gz"
options="!check"

build() {
	abuild-meson "$srcdir/$pkgname-$_commit" "$srcdir/output"
}

package() {
	DESTDIR="$pkgdir" ninja -C "$srcdir/output" install
}

