pkgname=postmarketos-mkinitfs-files-libinput
pkgver=0.1
pkgrel=0
pkgdesc="Extra tools for libinput debugging in the initramfs"
url="https://postmarketos.org"
depends="postmarketos-mkinitfs libinput libinput-tools"
source="20-libinput.files"
arch="noarch"
license="GPL-3.0-or-later"
options="!check"

package() {
	install -Dm644 "$srcdir"/20-libinput.files \
		"$pkgdir"/etc/postmarketos-mkinitfs/files/20-libinput.files
}

