# Reference: https://postmarketos.org/uipkg
# Maintainer: Oliver Smith <ollieparanoid@postmarketos.org>
pkgname=postmarketos-ui-gnome
pkgver=3
pkgrel=10
pkgdesc="(Wayland) Gnome Shell"
url="https://gnome.org/"
# armhf blocked by gnome-shell -> gjs -> mozjs102
arch="noarch !armhf"
license="GPL-3.0-or-later"
depends="
	!gnome-shell-mobile
	!gnome-shell-mobile-schemas
	!mutter-mobile
	!mutter-mobile-schemas
	gdm
	gnome
	postmarketos-base-ui-gnome
	"
_pmb_recommends="
	gnome-calendar
	gnome-disk-utility
	gnome-extensions-app
	gnome-system-monitor
	nautilus
	snapshot
	"
install="$pkgname.post-install $pkgname.post-upgrade"
source="
	firefox-wayland.sh
	50-gnome.preset
"
subpackages="$pkgname-systemd"
options="!check"

package() {
	install -Dm755 \
		"$srcdir"/firefox-wayland.sh \
		-t "$pkgdir"/etc/profile.d/
}

systemd() {
	install_if="$pkgname=$pkgver-r$pkgrel systemd"

	install -Dm644 "$srcdir"/50-gnome.preset \
		-t "$subpkgdir"/usr/lib/systemd/system-preset/
}
sha512sums="
