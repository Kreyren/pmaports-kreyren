pkgname=install-makedepends
pkgver=0.0.1
pkgrel=0
pkgdesc="Tool to install makedepends for packages"
url="https://postmarketos.org"
depends="git"
source="install-makedepends.sh"
arch="noarch"
license="GPL-3.0-or-later"
options="!check"

package() {
	install -Dm755 "$srcdir/install-makedepends.sh" \
		"$pkgdir/bin/install-makedepends"
}
