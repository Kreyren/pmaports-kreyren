pkgname=xpad-dkms
pkgver=0.4_git20201202
_gitname=xpad
_commit="3935bf7ac186259f964aa163892f5eadbe1b9250"
pkgrel=0
pkgdesc="Linux Kernel Driver for the Xbox/ Xbox 360/ Xbox One Controllers"
url="https://github.com/paroj/xpad"
# This is a source-only package
arch="noarch"
license="GPL-2.0-or-later"
depends="dkms"
install="$pkgname.post-install $pkgname.pre-upgrade $pkgname.post-upgrade $pkgname.pre-deinstall"
source="$pkgname-$_commit.tar.gz::$url/archive/$_commit.tar.gz"
builddir="$srcdir/$_gitname-$_commit"
options="!check"

package() {
	mkdir -p "$pkgdir/usr/src"
	cp -R "$builddir" "$pkgdir/usr/src/xpad-0.4"
}
