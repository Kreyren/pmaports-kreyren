# Maintainer: Oliver Smith <ollieparanoid@postmarketos.org>
pkgname=postmarketos-upgrade-gtk3
pkgver=0.1
pkgrel=0
pkgdesc="postmarketOS upgrading notification app"
url="https://gitlab.com/postmarketOS/postmarketos-upgrade-gtk3"
arch="all"
license="GPL-3.0-or-later"
makedepends="meson libhandy-dev"
source="https://gitlab.com/postmarketOS/postmarketos-upgrade-gtk3/-/archive/$pkgver/postmarketos-upgrade-gtk3-$pkgver.tar.gz"
options="!check" # No tests

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install -C output

	install -Dm644 "data/upgrade-message" \
		"$pkgdir/etc/upgrade-message"

	# Autostart on first login, the app removes the symlink when started
	local _autostartdir="$pkgdir/etc/skel/.config/autostart"
	mkdir -p "$_autostartdir"
	ln -s "/usr/share/applications/org.postmarketos.Upgrade.desktop" \
		"$_autostartdir/org.postmarketos.Upgrade.desktop"
}

sha512sums="30ae1eccc68552990a660de8ef39fa1c4e88dca33a0ee6e373ca93829ebdbf0b818bc85c136232bfa30fbb742adff210b05e6bf01a9ed6c6f29e2a1c8bd2dd3d  postmarketos-upgrade-gtk3-0.1.tar.gz"
