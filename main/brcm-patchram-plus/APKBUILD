pkgname=brcm-patchram-plus
pkgver=1
pkgrel=0
pkgdesc="Downloads a patchram files in the HCD format to Broadcom Bluetooth based silicon and combo chips."
url="https://github.com/intel/edison-firmware"
arch="all"
license="Apache-2.0"
makedepends="gcc"
options="!check"
_repository="brcm-patchram-plus"
_commit="5147642a7c85e3fdc6785848443399e60827b211"
source="$pkgname-$_commit.tar.gz::https://github.com/antonialoytorrens/$_repository/archive/$_commit.tar.gz"
builddir="$srcdir/$_repository-$_commit"

build() {
	make
}

package() {
	install -D -m755 "$builddir"/brcm_patchram_plus \
	"$pkgdir"/usr/sbin/brcm_patchram_plus
}

