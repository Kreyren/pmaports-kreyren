# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
pkgname=libkipi
pkgver=24.01.80
pkgrel=0
pkgdesc="KDE Image Plugin Interface library"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://www.digikam.org/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
depends_dev="
	kconfig5-dev
	kservice5-dev
	kxmlgui5-dev
	qt5-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	libjpeg-turbo-dev
	libkexiv2-dev
	samurai
	tiff-dev
	"
subpackages="$pkgname-dev"
_repo_url="https://invent.kde.org/graphics/libkipi.git"
source="https://download.kde.org/unstable/release-service/$pkgver/src/libkipi-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
8be447b3a21dc8172042c175c6d964b3c487cc6f0d4fc7f2a6904b6da6d37af128113d38a2923765fe687c25436e3081f6e358178277be3db601922cdcf7a83b  libkipi-24.01.80.tar.xz
"
