# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: team/kde <bribbers@disroot.org>

# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
pkgname=kiconthemes
pkgver=5.246.0
pkgrel=0
pkgdesc="Support for icon themes"
# armhf blocked by extra-cmake-module
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only"
depends_dev="
	karchive-dev
	kconfigwidgets-dev
	kcoreaddons-dev
	ki18n-dev
	kitemviews-dev
	kwidgetsaddons-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	qt6-qttools-dev
	samurai
	"
checkdepends="xvfb-run"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
_repo_url="https://invent.kde.org/frameworks/kiconthemes.git"
source="https://download.kde.org/unstable/frameworks/$pkgver/kiconthemes-$pkgver.tar.xz"

build() {
	cmake -B build -DBUILD_WITH_QT6=ON -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	# kiconengine_unittest is broken
	xvfb-run ctest --test-dir build --output-on-failure -E "kiconengine_unittest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e470d0f4387ecd2013f431550a22a4a0865684d1603b230a2c323ad676a5292bc285d4187d424f0b079c18511dc07363bf45583ef1e0cff14c537fc15c7149a8  kiconthemes-5.246.0.tar.xz
"
