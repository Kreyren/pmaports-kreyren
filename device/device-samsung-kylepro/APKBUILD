# Reference: <https://postmarketos.org/devicepkg>
# Contributor: deata <andre.nyman02@gmail.com>
pkgname="device-samsung-kylepro"
pkgdesc="Samsung Galaxy Trend Plus"
pkgver=0.1
pkgrel=4
url="https://postmarketos.org"
license="MIT"
arch="armhf"
options="!check !archcheck"
depends="postmarketos-base linux-samsung-kylepro mkbootimg mesa-dri-swrast msm-fb-refresher"
makedepends="devicepkg-dev"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
source="deviceinfo"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-samsung-kylepro"
	mkdir "$subpkgdir"
}

sha512sums="fc97bd29c5cdd436d70d115c4701bda6632778332fd844cc53fcb65214765c775a599e9f619e9a9ee8a9e92b114f788f439f57b01d18a39e49281e4d13ad8846  deviceinfo"
