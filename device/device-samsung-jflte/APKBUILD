# Reference: <https://postmarketos.org/devicepkg>
pkgname="device-samsung-jflte"
pkgdesc="Samsung Galaxy S4"
pkgver=0.5
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="noarch"
options="!check"
depends="postmarketos-base linux-samsung-jflte mkbootimg mesa-dri-swrast"
makedepends="devicepkg-dev"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
source="deviceinfo"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-samsung-jflte"
	mkdir "$subpkgdir"
}

sha512sums="9d472a685d71cbd16a597939f54dc6b3fcd87efe6273c5e11461ce6c4ed7f7d48fdb67d81a477dab9ab6fdfb04360a0310448ef2eb079d0c4aee8801acebe402  deviceinfo"
