# Reference: <https://postmarketos.org/devicepkg>
# Contributor: Daniele Debernardi <drebrez@gmail.com>
pkgname="device-huawei-y530"
pkgdesc="Huawei Ascend Y530"
pkgver=1
pkgrel=16
url="https://postmarketos.org"
license="MIT"
arch="armv7"
options="!check !archcheck"
depends="postmarketos-base linux-huawei-y530 mkbootimg mesa-dri-swrast"
makedepends="devicepkg-dev"
source="deviceinfo"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-huawei-y530"
	mkdir "$subpkgdir"
}

sha512sums="4044556b0cb5812c62ca2b0ab93f41ebab97fd3f3e9cc3538e15bab89534252024e4a41dd86f590506b42804bcd415b1b57aa1776c2cf6bfa637b46ccd6e54ae  deviceinfo"
