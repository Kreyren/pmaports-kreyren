# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm/configs/j6primelte_swa_open_defconfig

pkgname=linux-samsung-j6primelte
pkgver=3.18.124
pkgrel=0
pkgdesc="Samsung Galaxy J6 Plus kernel fork"
arch="armv7"
_carch="arm"
_flavor="samsung-j6primelte"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="bash bc bison devicepkg-dev flex openssl-dev perl dtbtool gcc6 linux-headers"

if [ "${CC:0:5}" != "gcc6-" ]; then
	CC="gcc6-$CC"
	HOSTCC="gcc6-gcc"
	CROSS_COMPILE="gcc6-$CROSS_COMPILE"
fi

# Source
_repository="pmos_kernel_samsung_j6p"
_commit="7a1d200ef616bd73e4f9e07dcf5081b00be15d03"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://gitlab.com/linux-on-samsung-halium/$_repository/-/archive/$_commit/$_repository-$_commit.tar.gz
	$_config
	scripts-dtc-yylloc.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" "$_flavor" "$_outdir"
}

