# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-meizu-turbo
pkgdesc="Meizu Pro 5 (m86/turbo)"
pkgver=0.2
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="postmarketos-base linux-meizu-turbo mkbootimg mesa-dri-swrast msm-fb-refresher"
makedepends="devicepkg-dev"
source="deviceinfo udev_block_60-persistent-v4l.rules"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
	install -Dm644 "$srcdir"/udev_block_60-persistent-v4l.rules "$pkgdir"/etc/udev/rules.d/60-persistent-v4l.rules
}

nonfree_firmware() {
	pkgdesc="Firmware required for startup and subpackages with optional firmware"
	depends="firmware-meizu-turbo"
	mkdir "$subpkgdir"
}

