# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: x86_64

pkgname=linux-xiaomi-latte
pkgver=3.14.79
pkgrel=1
pkgdesc="Xiaomi Mi Pad 2 kernel fork(cm-13.0-deprecated branch from LineageOS)"
arch="x86_64"
_carch="x86_64"
# very important, do not change this name, otherwise in the kconfig step it
# will complain about no dependency matches
_flavor="xiaomi-latte"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="bash bc bison devicepkg-dev flex openssl-dev perl"

# Source
_repo_owner="latte-dev"
_repository="android_kernel_xiaomi_latte"
_commit="6e67c7ca996f53e50df85bda1983c6c73700ea23"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.zip::http://localhost/android_kernel_xiaomi_latte.zip
	$_config
	gcc7-give-up-on-ilog2-const-optimizations.patch
	gcc8-fix-put-user.patch
	per_cpu_load_addr.patch
"
# very important: if you are using a local zip, it should be the name of the
# name of the local zip instead of the $_repository-$commit template
builddir="$srcdir/android_kernel_xiaomi_latte"
_outdir="out"

prepare() {
	default_prepare
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" "$_flavor" "$_outdir"
}

