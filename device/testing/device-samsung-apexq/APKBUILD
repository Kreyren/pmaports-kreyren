# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-apexq
pkgdesc="Samsung Galaxy S Relay 4G"
pkgver=0.1
pkgrel=6
url="https://postmarketos.org"
license="MIT"
arch="armhf"
options="!check !archcheck"
depends="postmarketos-base linux-samsung-apexq mkbootimg mesa-dri-swrast"
makedepends="devicepkg-dev"
source="deviceinfo"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-samsung-apexq"
	mkdir "$subpkgdir"
}


sha512sums="10dd02e700d5d22dcf64243dbefc3bd62adc0d89d357f80a057f133bc0df9c5f400ffc7468237b9e1c7310198ae258adb3a441cbd4356e56e1c5800e5b774f7f  deviceinfo"
