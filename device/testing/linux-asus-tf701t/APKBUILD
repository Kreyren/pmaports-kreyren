# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm/configs/tegra_defconfig

pkgname=linux-asus-tf701t
pkgver=3.4.113
pkgrel=0
pkgdesc="Asus Transformer Pad kernel fork"
arch="armv7"
_carch="arm"
_flavor="asus-tf701t"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="bash bc bison devicepkg-dev flex openssl-dev perl xz"

# Source
_repository="android_kernel_asus_tf701t"
_commit="2226ef745f61a8826b9656cd909cc141aa1db481"
_config="config-asus-tf701t.armv7"
source="
	$pkgname-$_commit.tar.gz::https://github.com/LineageOS/$_repository/archive/$_commit.tar.gz
	$_config
	gcc7-give-up-on-ilog2-const-optimizations.patch
	gcc8-fix-put-user.patch
	kernel-use-the-gnu89-standard-explicitly.patch
	tf_defs_patch.patch
	mach-tegra.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="${CC:-gcc}" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" "$_flavor" "$_outdir"
}

