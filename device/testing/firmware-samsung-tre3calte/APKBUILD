pkgname=firmware-samsung-tre3calte
pkgver=1
pkgrel=0
pkgdesc="Samsung Galaxy Note 4 SM-N916S Wifi Firmware"
url="https://github.com/HexagonWin/tre3calte_wifi"
arch="armv7"
license="proprietary"
options="!check !strip"

# Source
source="
bcmdhd_sta.bin::https://github.com/HexagonWin/tre3calte_wifi/raw/main/bcmdhd_sta.bin
nvram_net.txt::https://raw.githubusercontent.com/HexagonWin/tre3calte_wifi/main/nvram_net.txt"


package() {
	# Wifi
	mkdir -p "$pkgdir/lib/firmware/postmarketos"
	install -Dm644 "${srcdir}/bcmdhd_sta.bin" \
		"$pkgdir/lib/firmware/postmarketos/bcmdhd_sta.bin"
	install -Dm644 "${srcdir}/nvram_net.txt" \
		"$pkgdir/lib/firmware/postmarketos/nvram_net.txt"
}
