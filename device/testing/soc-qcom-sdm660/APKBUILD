# Maintainer: Konrad Dybcio <konrad.dybcio@somainline.org>
# Co-Maintainer: Martin Botka <martin.botka@somainline.org>
pkgname=soc-qcom-sdm660
pkgdesc="Common package for Qualcomm SDM630/636/660 devices"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="BSD-3-Clause"
arch="aarch64"
options="!check !archcheck !tracedeps pmb:cross-native"
depends="mesa-dri-gallium"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"

package() {
	mkdir -p "$pkgdir"
}

nonfree_firmware() {
	pkgdesc="Modem, WiFi, BT and GPU Firmware"
	depends="
		linux-firmware-qca
		linux-firmware-qcom
		msm-modem
		pd-mapper
		pd-mapper-openrc
		tqftpserv
		tqftpserv-openrc
		"
	install="$subpkgname.post-install"
	mkdir "$subpkgdir"
}
