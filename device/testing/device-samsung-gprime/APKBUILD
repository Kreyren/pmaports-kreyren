# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-gprime
pkgdesc="Samsung Galaxy Grand Prime"
pkgver=3
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	postmarketos-base
	mkbootimg
	linux-postmarketos-qcom-msm8916
	soc-qcom-msm8916
	soc-qcom-msm8916-rproc
"
makedepends="devicepkg-dev"
source="deviceinfo"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
"
_pmb_select="soc-qcom-msm8916-rproc"

build() {
	devicepkg_build $startdir $pkgname
	install -Dm644 "$srcdir"/20-zinitix-input.rules \
		"$pkgdir"/lib/udev/rules.d/20-zinitix-input.rules
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="WiFi/BT/Modem/Video firmware"
	depends="msm-firmware-loader firmware-samsung-gprime-wcnss-nv"
	mkdir "$subpkgdir"
}

sha512sums="
d14ec5ffafd6f4caa3902e4c339326b667776cbd26e3978715b64435555ce9ed51b2de63182c5793fb67f5fdc06d3f58e66ce64b8768aa0ea0a5c71a4bc4ac18  deviceinfo
"
