# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-samsung-maguro
pkgver=3
pkgrel=5
pkgdesc="Google Galaxy Nexus (GSM)"
url="https://postmarketos.org"
arch="armv7"
license="MIT"
depends="postmarketos-base linux-samsung-maguro mkbootimg mesa-dri-swrast"
makedepends="devicepkg-dev"
subpackages="$pkgname-nonfree-firmware:nonfree_firmware"
source="deviceinfo"
options="!check !archcheck"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

nonfree_firmware() {
	pkgdesc="Wifi firmware"
	depends="firmware-samsung-maguro"
	mkdir "$subpkgdir"
}

sha512sums="6fceba37c57c765a92c247f5123f977e6cd51c58191594f837acc0da8528f00b188d8bb875b9397b329e2ddb5d39a985429836c01d1a994198fdd2d38e19c655  deviceinfo"
