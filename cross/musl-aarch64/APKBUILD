pkgname=musl-aarch64
pkgver=1.1.24
pkgrel=6
arch="armhf armv7 x86_64 x86"
subpackages="musl-dev-aarch64:package_dev"

_arch="aarch64"
_mirror="http://dl-cdn.alpinelinux.org/alpine/"

url="https://musl-libc.org"
license="MIT"
options="!check !strip"
pkgdesc="the musl library (lib c) implementation for $_arch"

_target="$(arch_to_hostspec $_arch)"

source="
	musl-$pkgver-r$pkgrel-$_arch.apk::$_mirror/v3.12/main/$_arch/musl-$pkgver-r$pkgrel.apk
	musl-dev-$pkgver-r$pkgrel-$_arch.apk::$_mirror/v3.12/main/$_arch/musl-dev-$pkgver-r$pkgrel.apk
