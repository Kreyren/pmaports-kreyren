source="
	musl-$pkgver-r$pkgrel-$_arch-v3.19.apk::$_mirror/v3.19/main/$_arch/musl-$pkgver-r$pkgrel.apk
	musl-dev-$pkgver-r$pkgrel-$_arch-v3.19.apk::$_mirror/v3.19/main/$_arch/musl-dev-$pkgver-r$pkgrel.apk
